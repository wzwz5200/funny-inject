                    <Border  Width="40" Height="40" CornerRadius="50">
                        <Border.Background>
                            <ImageBrush ImageSource="C:\Users\Administrator\source\repos\WpfApp2\WpfApp2\NewFolder1\006mowZnly1fxon7m0vncg305c05cq2w.png"/>
                        </Border.Background>

                    </Border>
                    <StackPanel Margin="15,0,0,0">
